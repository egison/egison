--
-- Type Class Tests
--
-- Tests for the type class system.
--

--
-- Test 1: Direct instance method calls
--

assertEqual "eqIntegerEq 1 1" (eqIntegerEq 1 1) True
assertEqual "eqIntegerEq 1 2" (eqIntegerEq 1 2) False
assertEqual "eqFloatEq 1.5 1.5" (eqFloatEq 1.5 1.5) True
assertEqual "eqStringEq hello hello" (eqStringEq "hello" "hello") True
assertEqual "eqBoolEq True True" (eqBoolEq True True) True
assertEqual "eqCharEq a a" (eqCharEq 'a' 'a') True

assertEqual "eqIntegerNeq 1 2" (eqIntegerNeq 1 2) True
assertEqual "eqFloatNeq 1.5 2.5" (eqFloatNeq 1.5 2.5) True
assertEqual "eqStringNeq a b" (eqStringNeq "a" "b") True

--
-- Test 2: typeName function
--

assertEqual "typeName Integer" (typeName 42) "Integer"
assertEqual "typeName Float" (typeName 3.14) "Float"
assertEqual "typeName String" (typeName "test") "String"
assertEqual "typeName Bool" (typeName True) "Bool"

--
-- Test 3: Ord-like operations
--

assertEqual "autoCompare lt" (autoCompare 1 2) (-1)
assertEqual "autoCompare eq" (autoCompare 5 5) 0
assertEqual "autoCompare gt" (autoCompare 7 3) 1
assertEqual "autoLt" (autoLt 3 5) True
assertEqual "autoGt" (autoGt 5 3) True

