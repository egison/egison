-- Polar Laplacian in 2D using tensor notation

def x := [| r, θ |]

def X := [| r * cos θ, r * sin θ |]

-- Local basis
def e := (flip ∂/∂) x~# X_#

-- Metric tensor
def g_i_j := generateTensor (\[a, b] -> V.* e_a e_b) [2, 2]
def g~i~j := withSymbols [i, j] (unitTensor [2, 2])_i_j / g_i_j

assertEqual "Metric tensor g_#_#"
  g_#_#
  [| [| 1, 0 |], [| 0, r^2 |] |]_#_#

assertEqual "Inverse metric tensor g~#~#"
  g~#~#
  [| [| 1, 0 |], [| 0, 1 / r^2 |] |]~#~#

-- Christoffel symbols
def Γ_i_j_k := withSymbols [j, k, l]
  (1 / 2) * (∂/∂ g_j_l x~k + ∂/∂ g_j_k x~l - ∂/∂ g_k_l x~j)

def Γ~i_j_k := withSymbols [i, j, k, l]
  g~i~j . Γ_j_k_l

-- Laplacian
def Laplacian := withSymbols [i, j, k]
  g~i~j . ∂/∂ (∂/∂ (f r θ) x~j) x~i - g~i~j . Γ~k_i_j . ∂/∂ (f r θ) x~k

assertEqual "Laplacian in polar coordinates"
  Laplacian
  (f|1|1 r θ + f|1 r θ / r + f|2|2 r θ / r^2)
