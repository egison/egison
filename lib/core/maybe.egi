--
--
-- Maybe (Option)
--
--

inductive Maybe a :=
  | Nothing
  | Just a

def maybe (a: Matcher b) : Matcher (Maybe b) :=
  matcher
    | nothing as () with
      | Nothing -> [()]
      | _ -> []
    | just $ as (a) with
      | Just $x -> [x]
      | _ -> []
    | $ as (something) with
      | $tgt -> [tgt]
