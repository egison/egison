{
  "comments": {
    "lineComment": "--",
    "blockComment": ["{-", "-}"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["[|", "|]"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "[|", "close": "|]" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "{-", "close": "-}", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["[|", "|]"],
    ["\"", "\""],
    ["{-", "-}"]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(def|class|instance|inductive|matcher|do|let|where|if|match|matchAll|matchDFS|matchAllDFS)\\b.*$",
    "decreaseIndentPattern": "^\\s*\\|"
  },
  "folding": {
    "markers": {
      "start": "^\\s*--\\s*#region",
      "end": "^\\s*--\\s*#endregion"
    }
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
}

