{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Egison",
  "scopeName": "source.egison",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#pattern-variables"
    },
    {
      "include": "#value-patterns"
    },
    {
      "include": "#definitions"
    },
    {
      "include": "#type-system"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#type-constraints"
    },
    {
      "include": "#tensor-indices"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#type-annotations"
    },
    {
      "include": "#mathematical-symbols"
    },
    {
      "include": "#function-calls"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-dash.egison",
          "begin": "--",
          "end": "$",
          "patterns": []
        },
        {
          "name": "comment.block.egison",
          "begin": "\\{-",
          "end": "-\\}",
          "patterns": [
            {
              "include": "#comments"
            }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.egison",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.egison",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.egison",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.egison",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "definitions": {
      "patterns": [
        {
          "comment": "def pattern <name> - pattern function declaration",
          "match": "\\b(def)\\s+(pattern)\\s+([a-zA-Z_][a-zA-Z0-9_']*|\\([^)]+\\))",
          "captures": {
            "1": { "name": "keyword.other.def.egison" },
            "2": { "name": "keyword.other.pattern.egison" },
            "3": { "name": "entity.name.function.egison" }
          }
        },
        {
          "comment": "def <name> - function definition",
          "match": "\\b(def)\\s+([a-zA-Z_][a-zA-Z0-9_']*|\\([^)]+\\))",
          "captures": {
            "1": { "name": "keyword.other.def.egison" },
            "2": { "name": "entity.name.function.egison" }
          }
        },
        {
          "comment": "declare symbol",
          "match": "\\b(declare)\\s+(symbol)\\b",
          "captures": {
            "1": { "name": "keyword.other.declare.egison" },
            "2": { "name": "keyword.other.symbol.egison" }
          }
        }
      ]
    },
    "type-system": {
      "patterns": [
        {
          "comment": "inductive pattern <TypeName> - pattern inductive type",
          "match": "\\b(inductive)\\s+(pattern)\\s+([A-Z][a-zA-Z0-9_]*|\\[[a-z]\\])",
          "captures": {
            "1": { "name": "keyword.other.inductive.egison" },
            "2": { "name": "keyword.other.pattern.egison" },
            "3": { "name": "entity.name.type.egison" }
          }
        },
        {
          "comment": "inductive <TypeName> - data type declaration",
          "match": "\\b(inductive)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.other.inductive.egison" },
            "2": { "name": "entity.name.type.egison" }
          }
        },
        {
          "comment": "class <ClassName> - type class declaration",
          "match": "\\b(class)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.other.class.egison" },
            "2": { "name": "entity.name.type.class.egison" }
          }
        },
        {
          "comment": "instance <ClassName> - type class instance",
          "match": "\\b(instance)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.other.instance.egison" },
            "2": { "name": "entity.name.type.class.egison" }
          }
        },
        {
          "comment": "extends keyword for superclass constraints",
          "name": "keyword.other.extends.egison",
          "match": "\\b(extends)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "comment": "Control flow",
          "name": "keyword.control.egison",
          "match": "\\b(if|then|else|match|matchAll|matchDFS|matchAllDFS|as|with|do|seq|loop|forall)\\b"
        },
        {
          "comment": "Binding and scope",
          "name": "keyword.other.egison",
          "match": "\\b(def|let|in|where|withSymbols|matcher|algebraicDataMatcher)\\b"
        },
        {
          "comment": "Type system declarations",
          "name": "keyword.other.declaration.egison",
          "match": "\\b(class|instance|inductive|pattern|declare|extends)\\b"
        },
        {
          "comment": "Infix operator declarations",
          "name": "keyword.other.infix.egison",
          "match": "\\b(infixr|infixl|infix|expression)\\b"
        },
        {
          "comment": "Lambda and special forms",
          "name": "keyword.other.lambda.egison",
          "match": "\\b(memoizedLambda|cambda|capply|function)\\b"
        },
        {
          "comment": "Tensor operations",
          "name": "keyword.other.tensor.egison",
          "match": "\\b(tensor|generateTensor|contract|tensorMap|tensorMap2|transpose|flipIndices|subrefs|subrefs!|suprefs|suprefs!|userRefs|userRefs!)\\b"
        },
        {
          "comment": "Module loading and execution",
          "name": "keyword.other.module.egison",
          "match": "\\b(load|loadFile|execute)\\b"
        },
        {
          "comment": "Special values",
          "name": "keyword.other.special.egison",
          "match": "\\b(undefined|something)\\b"
        },
        {
          "comment": "Testing primitives",
          "name": "keyword.other.test.egison",
          "match": "\\b(assert|assertEqual)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "comment": "Built-in type names from the parser",
          "name": "support.type.builtin.egison",
          "match": "\\b(Bool|Integer|Float|Char|String|MathExpr|IO|Matcher|Pattern|Tensor|Vector|Matrix|DiffForm|List)\\b"
        },
        {
          "comment": "User-defined type names (uppercase identifiers)",
          "name": "entity.name.type.egison",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.egison",
          "match": "\\b(True|False)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.egison",
          "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.egison",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.egison",
          "match": ":="
        },
        {
          "name": "keyword.operator.arrow.egison",
          "match": "(->|=>)"
        },
        {
          "name": "keyword.operator.cons.egison",
          "match": "::"
        },
        {
          "name": "keyword.operator.append.egison",
          "match": "\\+\\+"
        },
        {
          "name": "keyword.operator.ellipsis.egison",
          "match": "\\.\\.\\."
        },
        {
          "name": "keyword.operator.wedge.egison",
          "match": "∧"
        },
        {
          "name": "keyword.operator.logical.egison",
          "match": "(&&|\\|\\|)"
        },
        {
          "name": "keyword.operator.comparison.egison",
          "match": "(==|/=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.egison",
          "match": "(\\+|-|\\*|/|%|\\^)"
        },
        {
          "name": "keyword.operator.arithmetic-prime.egison",
          "match": "(\\+'|-'|\\*'|/'|\\^')"
        },
        {
          "name": "keyword.operator.pattern.egison",
          "match": "(&|\\||!|\\?|@|~)"
        },
        {
          "name": "keyword.operator.type-annotation.egison",
          "match": "(?<!:)(?<!/)(?<!=):(?!=)(?!:)"
        }
      ]
    },
    "pattern-variables": {
      "patterns": [
        {
          "name": "variable.parameter.pattern.egison",
          "match": "\\$[a-zA-Z_][a-zA-Z0-9_']*"
        },
        {
          "name": "variable.parameter.pattern.wildcard.egison",
          "match": "\\$(?![a-zA-Z0-9_(])"
        }
      ]
    },
    "value-patterns": {
      "patterns": [
        {
          "name": "constant.other.value-pattern.egison",
          "match": "#[a-zA-Z_][a-zA-Z0-9_']*"
        },
        {
          "name": "constant.other.value-pattern.paren.egison",
          "match": "#(?=\\()"
        }
      ]
    },
    "type-constraints": {
      "patterns": [
        {
          "comment": "Type class constraints: {Eq a}, {Eq a, Ord b}",
          "name": "meta.type-constraint.egison",
          "begin": "\\{(?=[A-Z])",
          "end": "\\}",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.type-constraint.begin.egison" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.type-constraint.end.egison" }
          },
          "patterns": [
            {
              "name": "entity.name.type.class.egison",
              "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
            },
            {
              "name": "variable.other.type.egison",
              "match": "\\b[a-z][a-zA-Z0-9_]*\\b"
            },
            {
              "name": "punctuation.separator.type-constraint.egison",
              "match": ","
            }
          ]
        }
      ]
    },
    "type-annotations": {
      "patterns": [
        {
          "comment": "Typed parameter: (x: Integer)",
          "match": "\\(([a-zA-Z_][a-zA-Z0-9_']*)\\s*:",
          "captures": {
            "1": { "name": "variable.parameter.egison" }
          }
        }
      ]
    },
    "tensor-indices": {
      "patterns": [
        {
          "comment": "Tensor subscript/superscript indices: v~i, T_j, T~i_j",
          "name": "variable.other.tensor-index.egison",
          "match": "(?<=[a-zA-Z0-9_'])(_|~)[a-zA-Z0-9_#]+"
        }
      ]
    },
    "mathematical-symbols": {
      "patterns": [
        {
          "name": "constant.character.math.egison",
          "match": "[∂∇∫∑∏√±×÷≠≤≥∞∈∉∀∃∧∨¬⊕⊗⊥⊤⊆⊇⊂⊃∪∩]"
        },
        {
          "name": "constant.character.greek.egison",
          "match": "[αβγδεζηθικλμνξοπρςστυφχψωΑΒΓΔΕΖΗΘΙΚΛΜΝΞΟΠΡΣΤΥΦΧΨΩ]"
        }
      ]
    },
    "function-calls": {
      "patterns": [
        {
          "comment": "Function application: func(args) or func [args]",
          "name": "entity.name.function.egison",
          "match": "\\b[a-z_][a-zA-Z0-9_']*(?=\\s*[({\\[])"
        }
      ]
    }
  }
}
